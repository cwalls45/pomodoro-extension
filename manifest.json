{
  "name": "Pomodoro Counter",
  "description": "Pomodoro Study Technique Counter",
  "version": "1.0",
  "manifest_version": 2,
  "chrome_url_overrides": {
    "newtab": "popup.html"
  },
  "browser_action": {
    "default_icon": "assets/tomato.png",
    "default_popup": "popup.html",
    "default_title": "Pomodoro"
  },
  "background": {
    "background": true,
    "scripts": [
      "./background.js"
    ]
  },
  "permissions": [
    "tabs",
    "notifications"
  ]
}